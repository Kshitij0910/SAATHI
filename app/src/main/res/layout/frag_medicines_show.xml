<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicines_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/view_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_field"
            android:drawableRight="@drawable/ic_go_to"
            android:elevation="20dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/imag_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_upload"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/my_medicine"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_below="@id/view_upload"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="20dp"
                android:src="@mipmap/pill_time" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/upload_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_prescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_effect_2"
            android:elevation="20dp"
            android:padding="10dp"
            android:text="UPLOAD"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/my_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imag_view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/view_profile"
            android:elevation="20dp"
            android:hint="MY PRESCRIPTION"
            android:padding="10dp"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/uploading_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_prescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/capture_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/upload_prescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/capture"
            android:elevation="20dp"
            android:padding="10dp"
            android:textSize="24sp" />
    </RelativeLayout>

</ScrollView>




