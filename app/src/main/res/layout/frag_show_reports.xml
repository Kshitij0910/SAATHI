<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reports_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/file_select"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/select_file"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_select"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="NO FILE SELECTED "
            android:textSize="24sp" />

        <Button
            android:id="@+id/report_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/ripple_effect_2"
            android:padding="10dp"
            android:text="UPLOAD"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/load_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/show_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/ic_go_to"
            android:padding="10dp" />
    </RelativeLayout>

</ScrollView>