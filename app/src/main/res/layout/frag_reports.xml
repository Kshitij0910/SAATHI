<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_reports"
            android:layout_width="353dp"
            android:layout_height="470dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/reports"/>

        <Button
            android:id="@+id/goto_upload_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_2"
            android:elevation="20dp"
            android:padding="10dp"
            android:text="@string/my_reports"
            android:textColor="@android:color/holo_orange_light"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/img_reports"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/goto_upload_medicines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_2"
            android:elevation="20dp"
            android:padding="10dp"
            android:text="@string/my_medicines"
            android:textColor="@android:color/holo_orange_light"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/img_reports"
            android:layout_marginBottom="30dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_page_report"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/img_reports"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"


            android:background="@drawable/reports_icon"
            android:elevation="20dp"
            android:scaleX="1.0"
            android:scaleY="1.0" />


        <Button
            android:id="@+id/btn_page_medicines"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/medicines_disabled"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_below="@+id/img_reports"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"/>

        <View
            android:id="@+id/dotmenu"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dotmenu"
            android:layout_below="@id/btn_page_report"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"/>

        <View
            android:id="@+id/dotmenu_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dotmenu_unselected"
            android:layout_below="@id/btn_page_report"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="130dp"
            android:layout_marginEnd="130dp"/>
















    </RelativeLayout>

</ScrollView>